<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--        In your IDE -> Run tab -> Edit Configurations -> Edit Configuration templates -> and REMOVE: -Dbrowser=CHROME
        to run tests using XML file or ADD: -ea -Dbrowser=CHROME to run tests through IDE-->

<suite name="Suite1" verbose="1" parallel="methods">
    <test name="Firefox" parallel="methods">
        <parameter name="browser" value="FIREFOX"/>
        <classes>
            <class name="org.selenium.pom.tests.GuestCheckoutTest"/>
        </classes>
    </test>
    <test name="Chrome" parallel="methods">
        <parameter name="browser" value="CHROME"/>
        <classes>
            <class name="org.selenium.pom.tests.GuestCheckoutTest"/>
        </classes>
    </test>
    <test name="Edge" parallel="methods">
        <parameter name="browser" value="EDGE"/>
        <classes>
            <class name="org.selenium.pom.tests.GuestCheckoutTest"/>
        </classes>
    </test>
</suite>